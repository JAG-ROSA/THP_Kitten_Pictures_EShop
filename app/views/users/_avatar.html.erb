<div class="container">
  <%if @users.avatar.attached?%>
    <%= image_tag @users.avatar, alt: 'avatar', class: "rounded-circle" %>    
  <%else%>
    <p>=== Still no user avatar ===</p>
  <%end%><br>

  <h3>Want to change your avatar?</h3>
  <%= form_tag user_avatars_path(@users), multipart: true do %>
    <%= file_field_tag :avatar %>
    <%= submit_tag "Update Avatar" %>
  <% end %>

</div>