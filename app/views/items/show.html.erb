<div class="container pt-5 mt-5">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @item.title %></h2>
      <%= image_tag @item.image, alt: "Image", class: "card-img-top" %>
      <p class="card-text"><%= @item.description %></p>
      <p class="card-text">Price: <%= @item.price %>â‚¬</p>
      <hr>
      <% if user_signed_in?%>
        <%= form_tag url_for(action: 'update'), method: "patch" do %>
          <%= submit_tag "Add to cart", class:"btn btn-danger mt-3 "%>
        <% end %>
      <% else %>
        <%= link_to "Add to cart", user_session_path, class: "btn btn-danger mt-3", method: "GET" %>
      <% end %>
      <%= link_to "Return to list", items_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
