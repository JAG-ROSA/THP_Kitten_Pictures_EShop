<div class="container pt-5 mt-5">
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-md-4">
        <%= image_tag @item.image, alt: "Image", class: "w-100" %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <button class= "btn btn-secondary float-right" onclick="goBack()">Return to list</button>
          <h3 class="card-title"><%= @item.title %></h3>
          <div class="pb-3">
            <% @item.categories.each do |category| %>
              <span class="badge badge-success"><%= category.label %></span>
            <% end %>
          </div>
          <h5 class="card-text">Price: <%= number_to_currency(@item.price, unit: "â‚¬", separator: ",", delimiter: "", format: "%n %u") %></h5>
          <p class="card-text"><%= @item.description %></p>
          <div class="card-text">
            <%= form_tag url_for(item_path(@item.id)), method: "patch", class: "form-inline" do %>
              <%= number_field_tag :quantity, 1, min: 1, class: "form-control w-25" %>
              <%= submit_tag "Add to cart", class: "btn btn-danger mx-3" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>