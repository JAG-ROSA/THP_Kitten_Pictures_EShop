<div class="container pt-5 mt-5">
  <div class="card d-flex justify-content-center">

    <% if @user.first_name != nil && @user.last_name != nil %>
      <h1 class="card-title text-center">Welcome <%= @user.full_name %></h1>
      <div class="card-body">
        <p>First name : <%= @user.first_name %></p>
        <p>Last name : <%= @user.last_name %></p>
        <p>Email address : <%= @user.email %></p>
      </div>

    <% else %>
      <div class="card-body">
        <h1 class="card-title">Profile</h1>
        <p>First name : to be defined</p>
        <p>Last name : to be defined</p>
        <p>Email address : <%= @user.email %></p>
      </div>
    <% end %>

    <% if @orders.any? %>
      <details closed="closed">
        <%= render partial: "orders", locals: {orders: @orders} %>
      </details>
    <% end %>

    <div class="text-center mb-2">
      <%= link_to "Update your profile information", edit_user_path(@user.id), class: "btn btn-primary w-50"%>
    </div>
  </div>
</div>
