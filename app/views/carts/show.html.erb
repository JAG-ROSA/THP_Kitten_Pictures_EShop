<div class="container pt-5 mt-5">
  <div class="row justify-content-between align-items-center">
    <h1>My Cart</h1>
    <% if user_signed_in? %>
      <% if @cart.total.to_d > 1 %>
        <%= button_to "Checkout", checkout_create_path(total: @cart.total), class: "btn btn-primary px-5", remote: true %>
      <% end %>
    <% else %>
      <% if @cart.total.to_d > 1 %>
        <%= button_to "Checkout", user_session_path, class: "btn btn-primary px-5" %>
      <% end %>
    <%end%>
  </div>
  <div id="items_in_current_cart">
    <%= render partial: "items", locals: { cart: @cart } %>
  </div>

</div>
