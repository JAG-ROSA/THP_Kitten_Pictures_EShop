<!DOCTYPE html>
<html>
  <head>
    <title>KittenPicturesEshopPlatform</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&family=Jost:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <script src="https://js.stripe.com/v3/"></script>
    <script src="https://kit.fontawesome.com/def3ace6b2.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <div id="page-container">
      <div id="navbar">
        <%= render "layouts/navbar" %>
        <div id="flash">
          <%= render "layouts/flash" %>
        </div>
      </div>
      <div id="content-wrap">
        <%= yield %>
      </div>
      <div id="footer">
        <%= render "layouts/footer" %>
      </div>
    </div>
  </body>
  <script>
    function goBack() {
      window.history.back();
    }
  </script>
</html>
